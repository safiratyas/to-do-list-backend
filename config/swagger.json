{
  "swagger": "2.0",
  "info": {
    "title": "CHECKLIST APPLICATION",
    "version": "1.0",
    "contact": {
      "name": "Safira",
      "url": "https://github.com/safiratyas/to-do-list-backend.git",
      "email": "safeeratyas@gmail.com"
    }
  },
  "tags": [{
      "name": "User"
    },
    {
      "name": "List"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/login": {
      "post": {
        "summary": "Login",
        "description": "Retrieve access tokens",
        "operationId": "login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/coreLoginResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [{
          "name": "body",
          "in": "body",
          "required": true,
          "schema": {
            "$ref": "#/definitions/coreLoginRequest"
          }
        }],
        "tags": [
          "User"
        ]
      }
    },
    "/api/register": {
      "post": {
        "summary": "Register",
        "description": "Create new user",
        "operationId": "register",
        "responses": {
          "201": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/coreRegisterResponseUser"
            }
          },
          "default": {
            "description": "An unexpected error response."
          }
        },
        "parameters": [{
          "name": "body",
          "in": "body",
          "required": true,
          "schema": {
            "$ref": "#/definitions/coreRegisterRequestUser"
          }
        }],
        "tags": [
          "User"
        ]
      }
    },
    "/api/who-am-i": {
      "get": {
        "summary": "Who Am I",
        "description": "Retrieve current user info",
        "operationId": "whoami",
        "security": [{
          "BearerTokenAuth": []
        }],
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/coreWhoAmIResponseUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "User"
        ]
      }
    },
    "/api/users/{id}": {
      "get": {
        "summary": "Get User data By Id",
        "description": "Retrieve user data by Id",
        "security": [{
          "BearerTokenAuth": []
        }],
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/coreUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [{
          "name": "id",
          "in": "path",
          "required": true,
          "type": "integer",
          "format": "int64"
        }],
        "tags": [
          "User"
        ]
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get All Users",
        "description": "Can Get Users, But Can not Edit and Delete",
        "security": [{
          "BearerTokenAuth": []
        }],
        "responses": {
          "200": {
            "description": "Berhasil ditampilkan",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/coreUser"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "User"
        ]
      }
    },
    "coreLoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "coreLoginResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "coreRegisterRequestUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "coreRegisterResponseUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "coreWhoAmIResponseUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array"
        }
      }
    }
  },
  "securityDefinitions": {
    "BearerTokenAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization"
    }
  }
}